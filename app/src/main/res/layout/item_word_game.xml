<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvResultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/h6Medium"
        tools:text="You/P2"
        android:textColor="@color/white"
        android:elevation="2dp"
        android:layout_marginStart="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnWord"
        app:layout_constraintStart_toStartOf="@+id/btnWord"
        app:layout_constraintTop_toTopOf="@+id/btnWord" />

    <Button
        android:id="@+id/btnWord"
        style="@style/h6Medium"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/rounded_word_background"
        android:textColor="@color/dark_text"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Будет сделано" />

</androidx.constraintlayout.widget.ConstraintLayout>